    "esModuleInterop": true,
    "lib": [
      "es2015",
      "DOM"
    ],
    "newLine": "lf",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "strict": true,
    "target": "es5"
  },
  "include": [
    "typings/**/*.d.ts",
    "node_modules/@*/types-*/*.d.ts",
    "src/**/*.ts"
  ]
